<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Tambah Teman"
            android:gravity="center"
            android:textSize="24dp"
            android:id="@+id/textView"
            tools:layout_editor_absoluteX="-16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:hint="Nama"
            android:inputType="text"
            android:textColorHint="@color/T"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:id="@+id/edtNama"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>

    <Spinner
            android:layout_width="377dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNama"
            android:layout_marginBottom="8dp"
            android:entries="@array/gender_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.045"
            app:layout_constraintStart_toStartOf="@+id/edtNama"
            app:layout_constraintEnd_toEndOf="@+id/edtNama"
    >


    </Spinner>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="textEmailAddress"
            android:layout_marginStart="8dp"
            android:hint="Email"
            android:textColorHint="@color/T"
            android:id="@+id/edtEmail"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNama"
            android:layout_marginTop="96dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:hint="No.Telp"
            android:textColorHint="@color/T"
            android:id="@+id/edtTelp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="textMultiLine"
            android:layout_marginStart="8dp"
            android:hint="Alamat"
            android:gravity="top"
            android:textColorHint="@color/T"
            android:id="@+id/edtAlamat"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edtTelp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.115"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="-8dp"
            android:layout_marginTop="8dp"
            android:text="Simpan"
            android:id="@+id/btnSv"
            app:layout_constraintTop_toBottomOf="@+id/edtAlamat"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.029"/>


</androidx.constraintlayout.widget.ConstraintLayout>
